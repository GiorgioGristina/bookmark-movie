        <%= image_tag "https://image.tmdb.org/t/p/w500#{movie.poster_url}", alt: movie.title, class: "movie-img rounded-top" %>
        <div class="movie-text">
            <h2><%= movie.title %></h2> 
            <p class='rating'><%= movie.rating %>‚≠ê</p>
            <p><%= movie.overview %></p>
            <%= link_to 'delete', bookmark_path(bookmark), method: :delete, data: {confirm: "are you sure you want to remove#{movie}"}%>
        </div> 
        </div>

    <% end %>
</div>


